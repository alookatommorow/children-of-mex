<header class="site-header">
  <nav class="stackable menu-container nav-menu">
    <div class="menu">
      <label for="show-menu" id="burger">
        <div class="menu-image">
          <img class="mobile-icon" src="https://s3-us-west-1.amazonaws.com/children-of-mexico/icon.svg" alt="">
          <img class="desk-icon" src="https://s3-us-west-1.amazonaws.com/children-of-mexico/horizontal-icon.svg" alt="">
        </div>
        <div class="menu-caret">
          <i class="fa fa-caret-down"></i>
          <i class="fa fa-caret-up"></i>
        </div>
      </label>
    </div>
    <input type="checkbox" id="show-menu" role=button>
    <div class="items">
      <%= link_to root_path, class: "item nav-item" do %>
        <p>Home</p>
      <% end %>
      <%= link_to page_path('about'), class: "item nav-item" do %>
        <p>About</p>
      <% end %>
      <%= link_to page_path('gallery'), class: "item nav-item" do %>
        <p>Gallery</p>
      <% end %>
      <%= link_to page_path('news'), class: "item nav-item"  do %>
        <p>News/Events</p>
      <% end %>
      <%= link_to page_path('contact'), class: "item nav-item"  do %>
        <p>Contact</p>
      <% end %>
      <%= link_to page_path('faq'), class: "item nav-item"  do %>
        <p>FAQ</p>
      <% end %>
      <%= link_to page_path('testimonials'), class: "item nav-item"  do %>
        <p>Testimonials</p>
      <% end %>
    </div>
  </nav>
</header>